{
  "name": "universal-git-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/monorepo/packages/**/*"
  ],
  "scripts": {
    "test:comment": "// Run all tests across workspaces",
    "//test": "npm run test --workspaces --if-present",
    "perf:heatmap": "node performance/profile-heatmap.mjs",
    "perf:analyze": "node performance/analyze-hot-path.mjs",
    "test": "npm run -w @awesome-os/universal-git-tests test",
    "tests": "npm run -w @awesome-os/universal-git-tests tests",
    "test:mock-server": "npm test -- packages/mock-server-tests/tests/**/*.test.ts",
    "tests:coverage": "c8 npm run -w @awesome-os/universal-git-tests tests",

    "build:comment": "// Build all packages that have a build script",
    "build": "npm run build --workspaces --if-present",

    "lint:comment": "// Lint all (if using eslint)",
    "lint": "npm run lint --workspaces --if-present",

    "publish:comment": "// Publish only changed package(s)",
    "publish": "npm publish --workspaces",

    "version:comment": "// Bump versions for all or single workspace",
    "version:all": "npm version patch --workspaces",
    "version:pkg": "npm version patch --workspace"
  }
}
