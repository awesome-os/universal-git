{
  "name": "universal-git-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:comment": "// Run all tests across workspaces",
    "test": "npm run test --workspaces --if-present",

    "build:comment": "// Build all packages that have a build script",
    "build": "npm run build --workspaces --if-present",

    "lint:comment": "// Lint all (if using eslint)",
    "lint": "npm run lint --workspaces --if-present",

    "publish:comment": "// Publish only changed package(s)",
    "publish": "npm publish --workspaces",

    "version:comment": "// Bump versions for all or single workspace",
    "version:all": "npm version patch --workspaces",
    "version:pkg": "npm version patch --workspace"
  }
}
