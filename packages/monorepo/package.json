{
  "name": "@awesome-os/universal-git-monorepo",
  "version": "0.0.0-development",
  "workspaces": [
    "website",
    "packages/*",
    "src",
    "."
  ],
  "description": "A pure JavaScript reimplementation of git for node and browsers",
  "type": "module",
  "typings": "./index.d.cts",
  "main": "./index.cjs",
  "module": "./index.js",
  "unpkg": "./index.umd.min.js",
  "bin": {
    "ugit": "./cli.cjs"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.17"
  },
  "scripts": {
    "start": "nps",
    "format": "nps format",
    "//test": "npm test -- tests/**/*.test.ts",
    "t": "node --experimental-strip-types --test --test-concurrency=0 tests/**/*test.ts 2>&1 | Select-String -Pattern \"Error|FAIL|âœ–|SyntaxError\"",
    "nps:build": "nps build",
    "test": "node --experimental-strip-types --test --test-timeout=13000 --test-concurrency=12",
    "perf:heatmap": "node performance/profile-heatmap.mjs",
    "perf:analyze": "node performance/analyze-hot-path.mjs",
    "tests": "npm run -w @awesome-os/universal-git-tests tests",
    "test:mock-server": "npm test -- packages/mock-server-tests/tests/**/*.test.ts",
    "tests:coverage": "c8 npm run -w @awesome-os/universal-git-tests tests:coverage",
    "nps:test": "nps test",
    "jest": "$env:NODE_OPTIONS=\"--experimental-vm-modules\"; npx jest --ci --coverage",
    "publish-website": "nps website",
    "prepublishOnly": "nps prepublish",
    "add-contributor": "nps contributors.add",
    "generate-fixtures": "node scripts/generate-fixtures.mjs",
    "analyze-unused": "node scripts/analyze-unused-code.mjs",
    "profile:merge": "node scripts/profile-with-perf.mjs",
    "profile:merge:timing": "node scripts/profile-timing.mjs",
    "profile:merge:cpu": "node scripts/profile-detailed.mjs",
    "profile:merge:node": "node scripts/profile-merge-test.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awesome-os/universal-git.git"
  },
  "keywords": [
    "git",
    "isomorphic",
    "universal",
    "awesome-os"
  ],
  "author": "AwesomeOS - contributors <noreply-oss@awesome-os.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/awesome-os/universal-git/issues"
  },
  "homepage": "https://awesome-os.com/universal-git/",
  "files": [
    "cli.cjs",
    "http/*",
    "index.cjs",
    "index.d.cts",
    "index.js",
    "index.d.ts",
    "index.umd.min.js",
    "index.umd.min.d.ts",
    "index.umd.min.js.map",
    "managers/*",
    "models/*"
  ],
  "dependencies": {
    "async-lock": "^1.4.1",
    "clean-git-ref": "^2.0.1",
    "comlink": "^4.4.2",
    "crc-32": "^1.2.2",
    "diff3": "^0.0.4",
    "dotenv": "^17.2.3",
    "ignore": "^5.1.4",
    "minimisted": "^2.0.1",
    "pify": "^4.0.1",
    "readable-stream": "^4.7.0",
    "sha.js": "^2.4.12",
    "simple-get": "^4.0.1"
  },
  "devDependencies": {
    "@isomorphic-git/cors-proxy": "^3.0.0",
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "@isomorphic-git/pgp-plugin": "^0.0.7",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "@zenfs/core": "^2.4.4",
    "agadoo": "^3.0.0",
    "better-sqlite3": "^12.4.6",
    "c8": "^10.1.3",
    "cross-env": "6.0.0",
    "decompress": "^4.2.0",
    "diff-lines": "1.1.1",
    "envify": "4.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-standard": "^4.0.1",
    "git-http-mock-server": "^2.0.0",
    "inquirer": "^13.0.1",
    "jsdoc-api": "^9.3.5",
    "markdown-table": "^2.0.0",
    "nps": "^5.10.0",
    "nps-utils": "^1.0.2",
    "prettier": "^3.6.2",
    "prettier-config-standard": "^1.0.1",
    "replace-in-file": "4.1.3",
    "rollup": "^4.53.3",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "rxjs": "^7.8.2",
    "ssh2": "^1.17.0",
    "standard": "^17.1.2",
    "timeout-cli": "0.3.2",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "ws": "^8.18.3"
  },
  "prettier": "./.prettierrc.cjs"
}
